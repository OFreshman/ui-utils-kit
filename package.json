    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "ui-utils-kit": "^1.1.0"
  },
  "devDependencies": {
    "@antfu/ni": "^0.23.1",
    "@antfu/utils": "^0.7.10",
    "@xiaohe01/eslint-config": "^0.0.7",
    "@xiaohe01/tsconfig": "^0.0.2",
    "bumpp": "^9.8.1",
    "eslint": "^9.15.0",
    "esno": "^4.8.0",
    "lint-staged": "^15.2.10",
    "simple-git-hooks": "^2.11.1",
    "typescript": "~5.6.3",
    "unbuild": "^2.0.0",
    "vite": "^5.4.11",
    "vitest": "^2.1.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }

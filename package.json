{
  "name": "ui-utils-kit",
  "type": "module",
  "version": "1.3.9",
  "private": true,
  "packageManager": "pnpm@10.10.0",
  "author": "OFreshman",
  "description": "ui-utils-kit 是一个偏业务的前端工具函数库",
  "homepage": "https://ofreshman.github.io/ui-utils-kit/",
  "repository": {
    "type": "git",
    "url": "https://github.com/OFreshman/ui-utils-kit"
  },
  "bugs": {
    "url": "https://github.com/OFreshman/ui-utils-kit/issues"
  },
  "scripts": {
    "prepare": "simple-git-hooks",
    "play": "nr -C playground dev",
    "build": "nr -r --filter=./packages/* build",
    "release": "bumpp -r",
    "lint": "eslint --cache .",
    "lint:type": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint:fix": "nr lint --fix",
    "stylelint:fix": "stylelint **/*.{css,scss,html,vue} --fix"
  },
  "dependencies": {
    "@antfu/nip": "catalog:",
    "husky": "catalog:",
    "ui-utils-kit": "catalog:"
  },
  "devDependencies": {
    "@antfu/ni": "catalog:",
    "@antfu/utils": "catalog:",
    "@xiaohe01/eslint-config": "catalog:",
    "@xiaohe01/tsconfig": "catalog:",
    "bumpp": "catalog:",
    "eslint": "catalog:",
    "esno": "catalog:",
    "lint-staged": "catalog:",
    "simple-git-hooks": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue}": "eslint --fix"
  }
}
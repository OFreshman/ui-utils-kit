{
  "name": "@ui-utils-kit/monorepo",
  "type": "module",
  "version": "1.1.7",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "description": "ui-utils-kit 是一个高效的偏业务前端工具函数库",
  "scripts": {
    "prepare": "simple-git-hooks",
    "play": "nr -C playground dev",
